<div class="col-md-6 mx-auto mt-4">

    <div class="card mt-4">
        <h5 class="card-header white-text text-center py-4">
            <strong>Register</strong>
        </h5>

        <div class="card-body">

            <form action="/user/register" method="POST" class="text-center" style="color: #00838f;">
                <div class="form-row">
                    <div class="col">
                        <div class="md-form">
                            <input type="text" name="name" class="form-control mb-4" autofocus value="{{name}}" placeholder="Name">
                        </div>
                    </div>

                    <div class="col">
                        <div class="md-form">
                            <input type="text" name="surname" class="form-control mb-4" value="{{surname}}" placeholder="Surname">
                        </div>
                    </div>
                </div>

                <div class="md-form mt-0">
                    <input type="email" name="email" class="form-control mb-4" value="{{email}}" placeholder="E-mail">
                </div>

                <div class="md-form">
                    <input type="password" name="password" class="form-control mb-4" value="{{password}}" placeholder="Password">
                </div>

                <div class="md-form">
                    <input type="password" name="conf_password" class="form-control mb-4" value="{{conf_password}}" placeholder="Confirm password">
                </div>

                <button class="btn btn-customer my-4 btn-block" type="submit">Register</button>
            </form>

            <hr>
            <div class="text-center">
                <p>Do you have an account? <a href="/user/login">Login</a></p>
                <p>Or go <a href="/">home</a>.</p>
            </div>
        </div>
    </div>
</div>